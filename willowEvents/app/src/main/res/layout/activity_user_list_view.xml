<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizer.UserListView">

    <TextView
        android:id="@+id/send_notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_bar" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue_dark"
        android:text="Close"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toTopOf="@+id/send_notification_background" />

    <Button
        android:id="@+id/download_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue_active"
        android:text="Download"
        android:textColor="@color/white"
        android:visibility="gone"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintTop_toTopOf="@+id/send_notification_background" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/number_bar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:minHeight="?attr/actionBarSize"
        android:padding="12dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_button" />

    <TextView
        android:id="@+id/number_people_on_waitlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of entrants : unknown"
        app:layout_constraintEnd_toEndOf="@+id/number_bar"
        app:layout_constraintStart_toStartOf="@+id/number_bar"
        app:layout_constraintTop_toTopOf="@+id/number_bar"
        app:layout_constraintBottom_toBottomOf="@+id/number_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>