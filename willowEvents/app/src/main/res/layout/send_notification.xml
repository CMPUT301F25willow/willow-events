<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:id="@+id/send_notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:gravity="center"
        android:text="To: Waitlist"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toTopOf="@+id/send_notification_background" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/blue_base"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintBottom_toBottomOf="@+id/send_notification_background"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/blue_active"
        android:text="Send"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintBottom_toBottomOf="@+id/send_notification_background"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background" />

    <EditText
        android:id="@+id/notification_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:gravity="top"
        android:hint="Message"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>