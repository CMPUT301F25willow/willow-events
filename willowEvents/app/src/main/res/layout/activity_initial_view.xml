<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@color/blue_base"
    tools:context=".initialPages.InitialView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/square_background"

        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="WILLOW EVENTS"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/square_background" />

    <Button
        android:id="@+id/device_login_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue_dark"
        android:text="Sign In (Device ID)"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/square_background"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/square_background"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <Button
        android:id="@+id/device_signup_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/grey_dark"
        android:text="Register (Device ID)"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/square_background"
        app:layout_constraintEnd_toEndOf="@+id/square_background"
        app:layout_constraintStart_toStartOf="@+id/square_background"
        app:layout_constraintTop_toBottomOf="@+id/device_login_button" />
</androidx.constraintlayout.widget.ConstraintLayout>