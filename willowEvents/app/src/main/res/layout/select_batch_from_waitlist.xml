<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/send_notification_background"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        android:gravity="center"
        android:text="Invite to event"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toTopOf="@+id/send_notification_background" />

    <TextView
        android:id="@+id/invite_text"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:gravity="center"
        android:text="Invite how many applicants?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue_base"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toBottomOf="@+id/invite_text" />

    <Button
        android:id="@+id/invite_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/blue_active"
        android:text="Invite"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintTop_toBottomOf="@+id/invite_text" />

</androidx.constraintlayout.widget.ConstraintLayout>