<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/send_notification_background"
        android:layout_width="401dp"
        android:layout_height="527dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_background"
        android:gravity="center"
        android:text="Upload a Poster"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        app:layout_constraintTop_toTopOf="@+id/send_notification_background" />


    <Button
        android:id="@+id/upload_image_button"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/blue_dark"
        android:text="Upload Image"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />


    <Button
        android:id="@+id/update_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue_active"
        android:text="Update"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintEnd_toEndOf="@+id/send_notification_background"
        tools:layout_editor_absoluteY="476dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/blue_base"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="@dimen/corner_radius"
        app:layout_constraintStart_toStartOf="@+id/send_notification_background"
        tools:layout_editor_absoluteY="476dp" />

    <ImageView
        android:id="@+id/uploaded_image"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="133dp" />

</androidx.constraintlayout.widget.ConstraintLayout>