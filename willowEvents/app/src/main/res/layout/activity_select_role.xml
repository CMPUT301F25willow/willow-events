<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRoleView">

    <Button
        android:id="@+id/entrant_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_btwn_elem"
        android:text="ENTRANT"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        app:layout_constraintEnd_toStartOf="@+id/organizer_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_prompt"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/organizer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_btwn_elem"
        android:textSize="12sp"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:text="ORGANIZER"
        app:layout_constraintStart_toEndOf="@+id/entrant_button"
        app:layout_constraintEnd_toEndOf="@+id/admin_button"
        app:layout_constraintTop_toBottomOf="@+id/select_prompt"/>

    <Button
        android:id="@+id/admin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/spacing_btwn_elem"
        android:padding="10dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:text="ADMIN"
        app:layout_constraintStart_toEndOf="@+id/organizer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_prompt"/>

    <TextView
        android:id="@+id/select_prompt"
        android:layout_width="@dimen/toolbar_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="@color/blue_base"
        android:padding="10dp"
        android:text="Please select your role"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>